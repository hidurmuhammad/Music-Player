<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.codmeric.musicplayer.ui.LoadingFragment"
        android:label="Loading"
        tools:layout="@layout/fragment_loading">
        <action
            android:id="@+id/action_loadingFragment_to_playerFragment"
            app:destination="@id/playerFragment"
            app:popUpTo="@id/loadingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.codmeric.musicplayer.ui.PlayerFragment"
        android:label="Player"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_playerFragment_to_equalizerFragment"
            app:destination="@id/equalizerFragment" />
    </fragment>

    <fragment
        android:id="@+id/equalizerFragment"
        android:name="com.codmeric.musicplayer.ui.EqualizerFragment"
        android:label="Equalizer"
        tools:layout="@layout/fragment_equalizer" />
</navigation>

