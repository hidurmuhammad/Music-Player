<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/surface_dark</item>
        
        <!-- Status bar and window -->
        <item name="android:statusBarColor">@color/bg_gradient_start</item>
        <item name="android:windowBackground">@color/bg_gradient_start</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Custom View Styles -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button.TonalButton</item>
    </style>
</resources>